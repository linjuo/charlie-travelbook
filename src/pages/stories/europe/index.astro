---
const BASE =
  import.meta.env.BASE_URL.endsWith("/")
    ? import.meta.env.BASE_URL
    : `${import.meta.env.BASE_URL}/`;

const withBase = (p) => `${BASE}${String(p).replace(/^\/+/, "")}`;

const collections = [
  {
    title: "Northern Italy — 7 days",
    subtitle: "Lakes, mountains, and northern cities.",
    image: "images/hero/northern-italy.jpg",
    url: "stories/europe/northern-italy",
  },
  {
    title: "Central & South Italy — 7 days",
    subtitle: "Tuscan hill towns, Rome, coast, and southern flavors.",
    image: "images/hero/central-south-italy.jpg",
    url: "stories/europe/central-south-italy",
  },
];
---

<html lang="en">
  <head>
    <title>Europe Stories</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
  </head>

  <body style="font-family: system-ui; max-width: 1000px; margin: 40px auto; padding: 0 16px;">
    <header style="display:flex; justify-content:space-between; align-items:center;">
      <div>
        <h1 style="margin:0;">Europe</h1>
        <div style="color:#555; margin-top:4px;">Collections by itinerary.</div>
      </div>

      <nav style="display:flex; gap:12px;">
        <a href={withBase("")}>Home</a>
        <a href={withBase("stories")}>Stories</a>
        <a href={withBase("shop")}>Shop</a>
      </nav>
    </header>

    <section style="display:grid; grid-template-columns: repeat(auto-fit, minmax(260px, 1fr)); gap:16px; margin-top:18px;">
      {collections.map((c) => (
        <a
          href={withBase(c.url)}
          style="text-decoration:none; color:inherit; border:1px solid #eee; border-radius:18px; overflow:hidden;"
        >
          <img src={withBase(c.image)} alt={c.title} style="width:100%; aspect-ratio:16/10; object-fit:cover;" />
          <div style="padding:14px;">
            <div style="font-size:20px; font-weight:700;">{c.title}</div>
            <div style="margin-top:6px; color:#555; line-height:1.5;">{c.subtitle}</div>
          </div>
        </a>
      ))}
    </section>
  </body>
</html>

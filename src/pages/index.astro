---
const BASE =
  import.meta.env.BASE_URL.endsWith("/")
    ? import.meta.env.BASE_URL
    : `${import.meta.env.BASE_URL}/`;

const withBase = (p) => `${BASE}${String(p).replace(/^\/+/, "")}`;

// Change this if your filename differs
const HERO_IMAGE = "images/hero/home.jpg";
---

<html lang="en">
  <head>
    <title>Charlie Travelbook</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta
      name="description"
      content="Travel stories and a tiny pantry shop ‚Äî souvenirs connected to each trip."
    />
  </head>

  <body style="margin:0; font-family: system-ui;">
    <!-- Top nav (overlay on hero) -->
    <header
      style="
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        z-index: 10;
        padding: 18px 16px;
      "
    >
      <div
        style="
          max-width: 1100px;
          margin: 0 auto;
          display: flex;
          align-items: center;
          justify-content: space-between;
          gap: 16px;
        "
      >
        <div style="color: #fff; font-weight: 700; letter-spacing: 0.2px;">
          Charlie Travelbook
        </div>

        <nav style="display:flex; gap:14px; flex-wrap:wrap;">
          <a href={withBase("")} style="color:#fff; text-decoration:none;">Home</a>
          <a href={withBase("stories/tuscany")} style="color:#fff; text-decoration:none;">Stories</a>
          <a href={withBase("shop")} style="color:#fff; text-decoration:none;">Shop</a>
        </nav>
      </div>
    </header>

    <!-- HERO -->
    <section
      style={`
        position: relative;
        min-height: 78vh;
        display: grid;
        place-items: center;
        background-image: url('${withBase(HERO_IMAGE)}');
        background-size: cover;
        background-position: center;
      `}
    >
      <!-- Overlay: controls transparency so text stays readable -->
      <div
        style="
          position:absolute;
          inset:0;
          background: rgba(0,0,0,0.3); /* adjust: 0.25 lighter, 0.5 darker */
        "
      ></div>

      <!-- Optional: add a subtle ‚Äúglass‚Äù panel behind the title -->
      <div
        style="
          position: relative;
          z-index: 1;
          text-align: center;
          padding: 18px 18px;
          border-radius: 20px;
          max-width: 900px;
        "
      >
        <h1
          style="
            margin: 0;
            color: #fff;
            font-size: clamp(34px, 4vw, 56px);
            letter-spacing: 0.2px;
            text-shadow: 0 2px 18px rgba(0,0,0,0.35);
          "
        >
          Traveling to Unique Places
        </h1>

        <p
          style="
            margin: 12px auto 0;
            color: rgba(255,255,255,0.92);
            font-size: 18px;
            line-height: 1.6;
            max-width: 720px;
            text-shadow: 0 2px 16px rgba(0,0,0,0.25);
          "
        >
          Travel stories with a tiny pantry shop ‚Äî the souvenirs and grocery finds we bring home.
        </p>

        <div style="margin-top: 16px; display:flex; gap:10px; justify-content:center; flex-wrap:wrap;">
          <a
            href={withBase("stories/tuscany")}
            style="
              padding: 11px 16px;
              border-radius: 999px;
              border: 1px solid rgba(255,255,255,0.6);
              color: #fff;
              text-decoration:none;
              backdrop-filter: blur(6px);
            "
          >
            Read the latest story ‚Üí
          </a>

          <a
            href={withBase("shop")}
            style="
              padding: 11px 16px;
              border-radius: 999px;
              background: #fff;
              color: #111;
              text-decoration:none;
              border: 1px solid rgba(255,255,255,0.9);
            "
          >
            Browse the shop
          </a>
        </div>
      </div>
    </section>

    <!-- BELOW HERO (simple intro blocks) -->
    <main style="max-width:1100px; margin: 0 auto; padding: 26px 16px 40px;">
      <h2 style="margin:0 0 10px 0;">Start here</h2>

      <div style="display:grid; grid-template-columns: repeat(auto-fit, minmax(260px, 1fr)); gap:14px;">
        <a href={withBase("stories/tuscany")}
           style="text-decoration:none; color:inherit; border:1px solid #eee; border-radius:16px; padding:14px;">
          <div style="font-weight:700;">üìñ Stories</div>
          <div style="color:#555; margin-top:6px; line-height:1.5;">
            Read trip notes, towns, food, and what we brought back.
          </div>
        </a>

        <a href={withBase("shop")}
           style="text-decoration:none; color:inherit; border:1px solid #eee; border-radius:16px; padding:14px;">
          <div style="font-weight:700;">üßÇ Shop</div>
          <div style="color:#555; margin-top:6px; line-height:1.5;">
            Small-batch pantry souvenirs connected to each story.
          </div>
        </a>

        <a href={withBase("shop/tuscan-salt")}
           style="text-decoration:none; color:inherit; border:1px solid #eee; border-radius:16px; padding:14px;">
          <div style="font-weight:700;">‚≠ê Featured</div>
          <div style="color:#555; margin-top:6px; line-height:1.5;">
            Tuscan Sea Salt ‚Äî from the Tuscany trip.
          </div>
        </a>
      </div>
    </main>
  </body>
</html>
